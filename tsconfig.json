{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["src"]
  }